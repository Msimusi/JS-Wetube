extends base

block content
    form(method="POST")
        input(name="name" type="text", required, value=loggedInUser.name,placeholder="Name")
        input(name="email" type="email", required, value=loggedInUser.email, placeholder="Email")
        input(name="username" type="text", required, value=loggedInUser.username, placeholder="Username")
        input(name="location" type="text", required, value=loggedInUser.location, placeholder="Location")
        input(type="submit", value="Update Profile")